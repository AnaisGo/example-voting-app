pipeline {
agent none
	agent{
		docker{ image 'node:8.16.0-alpine'
				   args '-v $HOME/.m2:/root/.m2'
		}
	}
    stages {
        stage('Build') {
			agent{
				docker{ image 'node:8.16.0-alpine'
				   args '-v $HOME/.m2:/root/.m2'
				}
			}
			when{
			changeset "**/result/**"}
            steps {
                echo 'Compile result application'
                dir('result'){
                sh 'npm install'
                }
            }
        }
        stage('Test') {
			agent{
				docker{ image 'node:8.16.0-alpine'
				   args '-v $HOME/.m2:/root/.m2'
				}		
			}
            steps {
                echo 'Execute Unit Test on worker application'
				dir('result'){
				sh 'npm install && npm test''}
            }
        }
		stage('Docker Build'){
			agent any
			when{
				changeset '**/result/**'
				branch 'master'
			}
			steps{
				script{
					docker.withRegistry("https://index.docker.io/v1/", "dockerlogin"){
						def resultImage = docker.build('initcron/resultimage:v${env.BUILD_ID}', './result') 
						workerImage.push("${env.BRANCH_NAME}")
						}
					}
			}
		}
    }
    post{
        always{
            echo 'This is my first pipeline'
        }
    }
}
